{
  "plugins": ["stylelint-prettier"],
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "rules": {
    "prettier/prettier": true,
    "color-hex-length": "long"
  },
  "overrides": [
    {
      "files": ["**/*.scss", "**/*.module.scss"],
      "customSyntax": "postcss-scss"
    }
  ]
}
